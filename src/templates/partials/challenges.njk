<section id="challenges" class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title display-5 fw-bold">
                    ðŸš§ Challenges Faced & Solutions
                </h2>
            </div>
        </div>
        
        <div class="row g-4">
            {% for item in challenges %}
            <div class="col-lg-6">
                <div class="card card-hover h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-start mb-3">
                            <div class="bg-{{ item.color }} text-white rounded-circle p-3 me-3 flex-shrink-0">
                                {% if item.challenge == "Managing Time Constraints" %}
                                    <i class="fas fa-clock"></i>
                                {% elif item.challenge == "Bootstrap-React Integration" %}
                                    <i class="fas fa-puzzle-piece"></i>
                                {% elif item.challenge == "Ensuring Responsive Design" %}
                                    <i class="fas fa-mobile-alt"></i>
                                {% else %}
                                    <i class="fas fa-cogs"></i>
                                {% endif %}
                            </div>
                            <div>
                                <h5 class="card-title fw-bold">{{ item.challenge }}</h5>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <h6 class="text-danger mb-2">Problem:</h6>
                            <p class="text-muted small mb-0">{{ item.problem }}</p>
                        </div>
                        
                        <div>
                            <h6 class="text-success mb-2">Solution:</h6>
                            <p class="text-muted small mb-0">{{ item.solution }}</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
