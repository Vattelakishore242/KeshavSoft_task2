<section id="timeline" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title display-5 fw-bold">
                    ‚è±Ô∏è Detailed Time Breakdown
                </h2>
            </div>
        </div>
        
        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="card card-hover">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4">
                            <i class="fas fa-chart-pie me-2 text-primary"></i>
                            Time Distribution (180 minutes total)
                        </h5>
                        
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Task Category</th>
                                        <th>Time Spent</th>
                                        <th>Percentage</th>
                                        <th>Progress</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in timeBreakdown %}
                                    <tr>
                                        <td class="fw-semibold">{{ item.task }}</td>
                                        <td>
                                            <i class="fas fa-clock me-1 text-muted"></i>
                                            {{ item.time }} minutes
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ item.color }}">
                                                {{ item.percentage }}%
                                            </span>
                                        </td>
                                        <td>
                                            <div class="progress progress-custom" style="width: 100px;">
                                                <div class="progress-bar bg-{{ item.color }}" style="width: {{ item.percentage }}%;"></div>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card card-hover h-100">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4">üìä Quick Stats</h5>
                        
                        <div class="row g-3 text-center">
                            <div class="col-6">
                                <div class="bg-primary bg-opacity-10 rounded p-3">
                                    <h3 class="text-primary mb-1">180</h3>
                                    <small class="text-muted">Total Minutes</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-success bg-opacity-10 rounded p-3">
                                    <h3 class="text-success mb-1">3</h3>
                                    <small class="text-muted">Hours</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-warning bg-opacity-10 rounded p-3">
                                    <h3 class="text-warning mb-1">85%</h3>
                                    <small class="text-muted">AI Assisted</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-info bg-opacity-10 rounded p-3">
                                    <h3 class="text-info mb-1">100%</h3>
                                    <small class="text-muted">Completed</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card card-hover h-100">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4">üéØ Final Outcomes & Achievements</h5>
                        <ul class="list-unstyled">
                            {% for achievement in achievements %}
                            <li class="mb-2">
                                <span class="badge bg-success bg-opacity-10 text-success me-2">‚úÖ</span>
                                <small>{{ achievement }}</small>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="card card-hover h-100">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-4">üîß Features Implemented</h5>
                        <ul class="list-unstyled">
                            {% for feature in features %}
                            <li class="mb-2">
                                <span class="badge bg-primary bg-opacity-10 text-primary me-2">‚ö°</span>
                                <small>{{ feature }}</small>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
